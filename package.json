{
  "name": "email-tracking-api",
  "version": "1.0.0",
  "description": "The API backend for the email tracking",
  "main": "src/index.ts",
  "scripts": {
    "build": "npx tsc --noEmit -p tsconfig.build.json",
    "start": "ts-node --files --transpile-only src/index.ts",
    "dev": "NODE_ENV=development nodemon --files src/index.ts",
    "test": "npm run lint && npm run test:unit",
    "add-user": "ts-node --files --transpile-only  scripts/add_user.ts",
    "lookup-icloud-ip": "ts-node --files --transpile-only scripts/lookup_icloud_ip.ts",
    "prepare": "husky install",
    "lint": "npx prettier --check .",
    "test:unit": "jest -i"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cancan101/email-tracking-api.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/cancan101/email-tracking-api/issues"
  },
  "homepage": "https://github.com/cancan101/email-tracking-api#readme",
  "dependencies": {
    "@node-oauth/oauth2-server": "^4.2.0",
    "@prisma/client": "^4.4.0",
    "@sendgrid/mail": "^7.7.0",
    "@sentry/node": "^7.15.0",
    "@sentry/tracing": "^7.15.0",
    "commander": "^9.4.1",
    "cookie-session": "^2.0.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.5",
    "dotenv": "^16.0.3",
    "envalid": "^7.3.1",
    "express": "^4.18.2",
    "express-jwt": "^7.7.5",
    "express-oauth-server": "node-oauth/express-oauth-server",
    "express-validator": "^6.14.2",
    "ip-cidr": "^3.0.10",
    "jsonwebtoken": "^8.5.1",
    "nocache": "^3.0.4",
    "throng": "^5.0.0",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@types/cookie-session": "^2.0.44",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/express-oauth-server": "^2.0.4",
    "@types/jest": "^28.1.8",
    "@types/jsbn": "^1.2.30",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^18.8.5",
    "@types/supertest": "^2.0.12",
    "@types/throng": "^5.0.4",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "jest-mock-extended": "^3.0.1",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "prisma": "^4.7.0",
    "supertest": "^6.3.0",
    "ts-jest": "^28.0.8",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": "18.x"
  },
  "private": true,
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
